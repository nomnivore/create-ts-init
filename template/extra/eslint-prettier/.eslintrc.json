{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": "latest"
  },
  "env": {
    "node": true
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "dist/**/*",
    "build/**/*",
    "out/**/*",
    "coverage/**/*",
    "tmp/**/*"
  ]
}
