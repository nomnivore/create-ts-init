{
  "name": "create-ts-init",
  "version": "0.4.0",
  "description": "A simple boilerplate generator for TypeScript projects that helps you save time on configuration.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/nomnivore/create-ts-init",
  "exports": null,
  "bin": {
    "create-ts-init": "./dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "test": "jest",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "prepack": "npm run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fmt": "npm run format && npm run lint"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.5",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "prettier": "2.8.4",
    "ts-jest": "^29.0.5"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.1.5",
    "ora": "^6.2.0"
  },
  "keywords": [
    "typescript",
    "starter",
    "boilerplate",
    "template",
    "cli",
    "scaffold",
    "init",
    "initialization"
  ]
}
